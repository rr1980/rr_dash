{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2017",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2017", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": [ "node" ],
    "typeRoots": [ "./node_modules/@types" ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}